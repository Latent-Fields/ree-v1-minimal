{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ree://experiment-pack/v1/manifest.schema.json",
  "title": "REE Experiment Pack Manifest v1",
  "type": "object",
  "required": [
    "schema_version",
    "experiment_type",
    "run_id",
    "status",
    "timestamp_utc",
    "source_repo",
    "runner",
    "artifacts"
  ],
  "properties": {
    "schema_version": { "const": "experiment_pack/v1" },
    "experiment_type": { "type": "string", "minLength": 1 },
    "run_id": { "type": "string", "minLength": 1 },
    "status": { "type": "string", "enum": ["PASS", "FAIL"] },
    "timestamp_utc": { "type": "string", "format": "date-time" },
    "source_repo": {
      "type": "object",
      "required": ["name", "commit"],
      "properties": {
        "name": { "type": "string" },
        "commit": { "type": "string" },
        "branch": { "type": "string" }
      },
      "additionalProperties": false
    },
    "runner": {
      "type": "object",
      "required": ["name", "version"],
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" }
      },
      "additionalProperties": false
    },
    "scenario": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "seed": { "type": ["integer", "string"] },
        "config_hash": { "type": "string" }
      },
      "additionalProperties": true
    },
    "stop_criteria_version": { "type": "string" },
    "claim_ids_tested": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true
    },
    "evidence_class": { "type": "string" },
    "evidence_direction": {
      "type": "string",
      "enum": ["supports", "weakens", "mixed", "unknown"]
    },
    "failure_signatures": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true
    },
    "artifacts": {
      "type": "object",
      "required": ["metrics_path", "summary_path"],
      "properties": {
        "metrics_path": { "type": "string" },
        "summary_path": { "type": "string" },
        "traces_dir": { "type": "string" },
        "media_dir": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
